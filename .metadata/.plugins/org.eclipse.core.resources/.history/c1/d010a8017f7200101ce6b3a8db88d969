package day03_0806;

import java.util.Scanner;

public class SWEA_1213 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int testCase = 10;
		
		//찾을문장
		String sentence = sc.next();
		//찾는문장
		String find = sc.next();
		
		
		
		System.out.println(matchingFor(sentence, find));
		//테스트 케이스만큼 돌려보자
//		for(int tc = 0; tc <= 10; tc++) {
//			
//			System.out.println(matchingFor(sentence, find));
//		}
//		
		
		
	
	}
	public static int matchingFor(String t, String p) {
		
		//찾을문장의 길이 N, 찾는 문장의 길이 M
		int N = t.length();
		int M = p.length();
		
		//배열을 벗어나지 않게 범위 제한
		for(int i = 0; i <= N-M; i++) {
			//if문에 대한 참 거짓 선언 불리언
			boolean isOk = true;
			for(int j = 0; j < M; j++) {
//t문장의 한글자 한글자 떼서 비교 이때 t와 p의 전체 순서가 맞아야 하므로 i+j
				// 이때 서로 맞지 않는다면?
				if(t.charAt(i+j) != p.charAt(j)) 
					isOk = false;
					break;//false를 반환하고 if문을 나간다.
				
			}
			if(isOk = true) {
				return i;//isOk가 true라면 조건이 참일 것이다! 그러면  
			}
		}
			return -1;
	}
}
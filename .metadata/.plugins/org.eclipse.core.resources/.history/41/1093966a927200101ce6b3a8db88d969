package day03_0806;

public class practice5 {

	public static void main(String[] args) {
	String str = "가나다라마바사";
	int N = str.length();
	
	
	//1. 뒤집기
	//문장 글자를 하나씩 집어넣기
	
	char[] arr = new char[N];//N만큼의 크기 선언
		for(int i = 0; i < N; i++) {
			//새로운 배열 정방향에 문장의 끝부터 하나씩 넣는다.
			arr[i] = str.charAt(N-1-i);
		}
		System.out.println(arr);
	
	
	

	}

}

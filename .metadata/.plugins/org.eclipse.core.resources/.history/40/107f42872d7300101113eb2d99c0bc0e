package day04_0807;

import java.util.Stack;

public class stack03_괄호검사 {

	public static void main(String[] args) {
		//소괄호만 있어! 간단한 문제
		//괄호검사
		//1. 여는괋호와 닫는 괄호의 개수는 동일
		//2. 여는 괄호는 닫는 괄호보다 먼저 나와야 한다.
		//3. 괄호는 포함관계여야 한다.(소괄호만 있으니까 굳이??)
		
		
		String str = "()()()()(())";
		
		Stack<Character> stack = new Stack<>();
		boolean isOk = true;//정상인지 아닌지를 확인하기 위함
		for(int i = 0; i<str.length();i++) {
			//1.여는괄호 넣어!
			if(str.charAt(i) == '(') {
				stack.push(str.charAt(i));
				
			}
			//2. 닫는 괄호 확인 필수
			else {
				//공백쳌
				if(stack.isEmpty()) {
					isOk = false;
					break;
				} else {
					char c = stack.pop();//검사실시
					
;				}
			}
		}
	}

}
